<%= form_for([@playlist, @song]) do |f| %>
  <% if @song.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@song.errors.count, "error") %> prohibited this song from being saved:</h2>

      <ul>
      <% @song.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
  <% if @song.title == "" %>
    <%= f.label :title %></br>
    <%= f.text_field :title %>
  <% else %>
    <%= f.label :title %></br>
    <%= f.text_field :title, readonly: f.object.persisted?  %>
  <% end %>
  </div>
  <div class="field">
  <% if @song.artist == "" %>
    <%= f.label :artist %></br>
    <%= f.text_field :artist %>
  <% else %>
    <%= f.label :artist %></br>
    <%= f.text_field :artist, readonly: f.object.persisted?  %>
  <% end %>
  </div>
  <div class="field">
  <% if @song.genre != nil %>  
    <%= f.label :genre %><br>
    <%= @song.genre.name %>
  <% else %>
    <%= f.label :genre %></br>
    <%= collection_select(:song, :genre_id, Genre.all, :id, :name) %>
  <% end %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>