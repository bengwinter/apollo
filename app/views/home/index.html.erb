<div class="home-form-background-logged-in">
<% if user_signed_in? %>
<h2 class="form-title"> Your Playlists </h2>
<div class="site-playlist-list">
<ul>
 <% current_user.playlists.each do |playlist| %>
    <li><%= link_to playlist.name, playlist %></li>
    <% end %>
    </ul>
  </div>
  <div class="homepage-button">
    <%= link_to 'Add Song', new_playlist_song_path(current_user.playlists.find_by_name("All")) %></div>
  <div class="homepage-button">  
    <%= link_to 'Add Playlist', new_playlist_path %></div>
</div>
<% else %>
<div class="landing-page">
  <%= render 'landing' %>
</div>
<% end %>